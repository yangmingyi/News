<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">
    <ImageView
        android:id="@+id/iv_news"
        android:layout_width="@dimen/iv_icon_width"
        android:layout_height="@dimen/iv_icon_height"
        android:transitionName="news"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_news"
        android:layout_toEndOf="@id/iv_news"
        android:maxLines="2"
        android:text="中国女排在里约奥运会上再度夺得金牌"
        android:textSize="@dimen/tv_textsize"
        android:textColor="@color/colortext"/>
    <TextView
        android:id="@+id/tv_news_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_news"
        android:layout_toEndOf="@id/iv_news"
        android:text="奥运新闻"
        android:textSize="@dimen/tv_textsize"/>

</RelativeLayout>